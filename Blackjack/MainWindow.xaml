<Window x:Class="Blackjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackjack"
        mc:Ignorable="d" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight"
        Title="BlackJack" Height="auto" Width="auto">
    <Grid Height="600" Width="800" Loaded="CreerDeck">
        <Grid.Background>
            <ImageBrush ImageSource="/PNG/Casino_Texture.jpg" Stretch="None" TileMode="Tile" Viewport="0, 0, 100, 100" ViewportUnits="Absolute"/>
        </Grid.Background>
        <!--Definitions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="1.3*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="2.5*"/>
        </Grid.RowDefinitions>
        
        <!--Cpu Side-->
        <Border CornerRadius="3, 3, 12, 6" BorderBrush="White" BorderThickness="2, 5, 2, 3" Background="Black" Opacity="0.4" Grid.Column="1" Margin="0, 5"/>
        <StackPanel x:Name="SpnlCpuDeck" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Center">
            <Image Source="\Cards\Card-Back.png" Width="105" Height="150" Margin="0"/>
            <Image Source="\Cards\Hearts-Ace.png" Width="105" Height="150" Margin="0"/>
        </StackPanel>
        <Image Source="/PNG/Purple_Hexagon.png" Width="115" Height="115"/>
        <Label x:Name="LblCpuScore" Content="21" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="42"
               FontFamily="Arial" Foreground="MintCream"/>
        <Ellipse Width="120" Height="120" Fill="Lavender" Opacity="0.5" Grid.Column="2" Margin="0, 10, 0, 0"/>
        <TextBlock x:Name="TxtCpuIcon" Text="🤖" Grid.Column="2" FontSize="82" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="Black"/>
        
        <!--Match Results-->
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="50" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="100, 5" >
            <Border.Background>
                <ImageBrush ImageSource="\PNG\Neon_Background.jpg" />
            </Border.Background>
        </Border>
        <Border Background="Black" Opacity="0.4" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="1" Margin="10" CornerRadius="100">
        </Border>
            <TextBlock x:Name="TxtResults" Text="Make a play 😊" FontSize="36" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" Foreground="White"/>

        <!--Buttons-->
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Cursor="Hand" x:Name="BtnDeel" Content="Deel" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="150"
                FontSize="24" Margin="15" />
            <Button Cursor="Hand" x:Name="BtnHit" Content="Hit" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="150"
                FontSize="24" Margin="15"  IsEnabled="False"/>
            <Button Cursor="Hand" x:Name="BtnStand" Content="Stand" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="150"
                FontSize="24" Margin="15"  IsEnabled="False"/>
        </StackPanel>
        
        <!--Player Side-->
        <Border CornerRadius="3, 3, 12, 6" BorderBrush="White" BorderThickness="2, 3, 2, 5" Background="Black" Opacity="0.4" Grid.Column="1" Grid.Row="4" Margin="0, 5"/>
        <StackPanel x:Name="SpnlPlayerDeck" Orientation="Horizontal" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="\Cards\Spades-Two.png" Width="105" Height="150" Margin="2, 0"/>
            <Image Source="\Cards\Clubs-Ten.png" Width="105" Height="150" Margin="2, 0"/>
        </StackPanel>
        <Image Source="/PNG/Purple_Hexagon.png" Width="115" Height="115" Grid.Column="2" Grid.Row="4"/>
        <Label x:Name="LblPlayerScore" Content="21" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="42"
               FontFamily="Arial" Foreground="MintCream"/>
        <Ellipse Width="120" Height="120" Fill="Lavender" Opacity="0.5" Grid.Row="4" Margin="0, 10, 0, 0"/>
        <TextBlock x:Name="TxtPlayerIcon" Text="🤔" Grid.Row="4" FontSize="82" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="Black" Opacity="0.9"/>
    </Grid>
    
    
    <!--Previous Design-->
    <!--<Grid Width="650" Height="400" Background="Beige" Loaded="CreerDeck" >-->
        <!--Definitions-->
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>-->
        
        <!--Speler kant-->
        <!--<TextBlock Text="Speler 🙂" FontSize="26" FontWeight="Bold" VerticalAlignment="Top" Margin="10"/>
        --><!--<ListBox x:Name="PlayerDeck" Grid.Row="1" Margin="5"/>--><!--
        <TextBlock x:Name="LblSpelerScore" Text="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36" FontWeight="Bold"/>
        
        --><!--Functionaliteit--><!--
        <Label x:Name="LblResults" Content="Result" Grid.Column="1" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold" VerticalAlignment="Center"/>
        
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <Button Cursor="Hand" x:Name="BtnDeel" Content="Deel" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="150"
                FontSize="24" Margin="15" Click="BtnDeel_Click"/>
            <Button Cursor="Hand" x:Name="BtnHit" Content="Hit" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="150"
                FontSize="24" Margin="15" Click="Give_Player_Card" IsEnabled="False"/>
            <Button Cursor="Hand" x:Name="BtnStand" Content="Stand" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="150"
                FontSize="24" Margin="15" Click="BtnStand_Click" IsEnabled="False"/>
        </StackPanel>
        
        --><!--CPU kant--><!--
        <TextBlock Text="CPU 🤖" FontSize="26" Grid.Column="2" FontWeight="Bold" VerticalAlignment="Top" Margin="10"/>
        --><!--<ListBox x:Name="CpuDeck" Grid.Row="1" Grid.Column="2" Margin="5"/>--><!--
        <TextBlock x:Name="LblCpuScore" Text="0" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36" FontWeight="Bold"/>

        --><!--LOGS--><!--
        <TextBox x:Name="TxtLogs" Grid.Row="2" Grid.Column="1" VerticalScrollBarVisibility="Auto" FontFamily="Courier New" TextWrapping="Wrap" FontWeight="DemiBold"/>-->
    <!--</Grid>-->
</Window>
